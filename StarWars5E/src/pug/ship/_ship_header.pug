.header
    .name-container
        img(src='https://s22.postimg.cc/jnlp8fqc1/Star_Wars_5_E_Logo_Shrunk.png', style='padding-bottom: 10px;')
        input(type='text', name='attr_character_name', style='width: 100%;')
        span.label(data-i18n='ship-name-u') SHIP NAME
    .header-info.sheet-options
        .sheet-row
            span(data-i18n='ship-size:-u') SIZE:
            select.hiding.class(name='attr_ship_size')
                option(value='', data-i18n='choose') Choose
                option(value='Tiny', data-i18n='tiny') Tiny
                option(value='Small', data-i18n='small') Small
                option(value='Medium', data-i18n='medium') Medium
                option(value='Large', data-i18n='large') Large
                option(value='Huge', data-i18n='huge') Huge
                option(value='Gargantuan', data-i18n='gargantuan') Gargantuan
            span(data-i18n='ship-tier:-u') TIER:
            input.class-level(type='number', style='width: 40px', name='attr_base_ship_tier', value='0')
            span(data-i18n='role-specialization:-u') ROLE:
            input.class-level(type='text', name='attr_ship_role', value='')
        .sheet-row
            span(data-i18n='ship-manufacturer:-u') MANUFACTURER/LINE/CLASS:
            input(type='text', name='attr_ship_manufacturer')
        .sheet-row
            span(data-i18n='ship-credits-next-tier:-u') CREDITS NEEDED TO UPGRADE TO NEXT TIER:
            input(type='number', style='width:90px', name='attr_ship_cr_next')