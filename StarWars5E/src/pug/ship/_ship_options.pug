.page.options
    include _ship_header.pug
    .body
        .col
            .general_options
                .version
                    span(data-i18n='version') v
                    input(type='text', name='attr_version')
                .row
                    span SHEET TYPE:
                    select(name='attr_npc')
                        option(value='0') PC
                        option(value='1') NPC
                        option(value='2') Ship
                .row
                    span(data-i18n='roll-queries:-u') ROLL QUERIES:
                    select(name='attr_rtype')
                        option(value='{{always=1}} {{r2=[[@{d20}', data-i18n='always-roll-adv') Always Roll Advantage
                        option(value='@{advantagetoggle}', data-i18n='toggle-roll-adv') Advantage Toggle
                        option(value='{{query=1}} ?{Advantage?|Normal Roll,&#123&#123normal=1&#125&#125 &#123&#123r2=[[0d20|Advantage,&#123&#123advantage=1&#125&#125 &#123&#123r2=[[@{d20}|Disadvantage,&#123&#123disadvantage=1&#125&#125 &#123&#123r2=[[@{d20}}', data-i18n='query-roll-adv') Query Advantage
                        option(value='{{normal=1}} {{r2=[[0d20', data-i18n='never-roll-adv') Never Roll Advantage
                .row
                    span(data-i18n='whisp-rolls-gm:-u') WHISPER ROLLS TO GM:
                    select(name='attr_wtype')
                        option(value='', data-i18n='never-whisper-roll') Never Whisper Rolls
                        option(value='@{whispertoggle}', data-i18n='toggle-roll-whisper') Whisper Toggle
                        option(value='?{Whisper?|Public Roll,|Whisper Roll,/w gm }', data-i18n='query-whisper-roll') Query Whisper
                        option(value='/w gm ', data-i18n='always-whisper-roll') Always Whisper Rolls
                .row
                    span(data-i18n='auto-dmg-roll:-u') AUTO DAMAGE ROLL:
                    select.dtype(name='attr_dtype')
                        option(value='pick', data-i18n='never-roll-dmg') Don&apos;t Auto Roll Damage
                        option(value='full', data-i18n='always-roll-dmg') Auto Roll Damage &amp; Crit
                .row
                    span(data-i18n='core-die-roll:-u') CORE DIE ROLL:
                    input(type='text', name='attr_core_die', value='1d20', placeholder='1d20', title='@{core_die}')
                .row
                    input(type='checkbox', name='attr_global_attack_mod_flag', value='1')
                    span(data-i18n='show-global-attack-field-u') SHOW GLOBAL ATTACK MODIFIER FIELD
                .row
                    input(type='checkbox', name='attr_global_damage_mod_flag', value='1')
                    span(data-i18n='show-global-damage-field-u') SHOW GLOBAL DAMAGE MODIFIER FIELD
                .row
                    span(data-i18n='add-char-to-templates:-u') ADD CHARACTER NAME TO TEMPLATES:
                    select.dtype(name='attr_charname_output')
                        option(value='{{charname=@{character_name}}}', data-i18n='on') On
                        option(value='charname=@{character_name}', selected='selected', data-i18n='off') Off
                .row
                    span(data-i18n='feats-traits-u') FEATURES AND TRAITS
                    span :
                    select(name='attr_simpletraits')
                        option(value='complex', data-i18n='compendium-compatible') Compendium Compatible
                        option(value='simple', data-i18n='simple') Simple
                .row
                    span(data-i18n='ammo-tracking:-u') AMMO TRACKING:
                    select(name='attr_ammotracking')
                        option(value='on', data-i18n='on') On
                        option(value='off', selected='selected', data-i18n='off') Off
                    span(data-i18n-title='api-required-title', data-i18n='api-required-u', title='Try it now with easy one click API installation available with your Pro subscription.', style='color:#666; cursor:help;') (API REQUIRED)
                .row
                    span(data-i18n='armor-class-tracking:-u') ARMOR CLASS TRACKING:
                    select(name='attr_custom_ac_flag')
                        option(value='0', selected='selected', data-i18n='automatic') Automatic
                        option(value='2', data-i18n='off') Off
                .row
                    span(data-i18n='speed-tracking:-u') SPEED TRACKING:
                    select(name='attr_custom_speed_flag')
                        option(value='0', selected='selected', data-i18n='automatic') Automatic
                        option(value='1', data-i18n='off') Off
                .row.title
                    span(data-i18n='general-opts-u') GENERAL OPTIONS
        .col
            .skill_options(style='width: 234px;')
                div(data-i18n-list='skills-list')
                    include ../_mixin/mixins.pug
                    .row(style='margin-top:10px;')
                        input(type='checkbox', name='attr_jack_of_all_trades', value='@{jack}')
                        span(data-i18n='jack-of-all-u') JACK OF ALL TRADES
                    .row
                        span(data-i18n='pass-perc-mod:-u') PASSIVE PERCEPTION MODIFIER:
                        input.num(type='text', name='attr_passiveperceptionmod', placeholder='0', value='0')
                    .row.title
                        span(data-i18n='skill-opts-u') SKILL OPTIONS
        .col
            span.label LEGACY/CUSTOM ARMOR AND SHIELDS
            .attacks(style='position: relative;min-height:100px;')
                .globalattack
                    span.label(data-i18n='armor-u', style='border:none') ARMOR
                    .global-mod
                        input.options-flag(type='checkbox', name='attr_options-flag', checked='checked', style='top: -15px;')
                        span y
                        input.active-flag(type='checkbox', name='attr_ship_armor_active_flag', value='1')
                        .options
                            .row
                                span(data-i18n='name:-u') NAME:
                                input(type='text', name='attr_ship_armor_name')
                            .row
                                span(data-i18n='ac-bonus:-u') AC BONUS:
                                input(type='number', name='attr_ship_armor_ac_bonus')
                            .row
                                span(data-i18n='hp-slash-hit-die:-u') HP/HIT DIE:
                                input(type='number', name='attr_ship_armor_hp_per_hit_die')
                        .display(style='margin-bottom: 2px;')
                            span(name='attr_ship_armor_name', style='width:120px; padding-right: 0px;')
                            span(name='attr_ship_armor_ac_bonus', style='width:20px; padding-right: 0px;')
                            span(name='attr_ship_armor_hp_per_hit_die', style='width:20px; padding-right: 0px;')
                .globalattack
                    span.label(data-i18n='shield-u') SHIELD
                    .global-mod
                        input.options-flag(type='checkbox', name='attr_options-flag', checked='checked', style='top: -15px;')
                        span y
                        input.active-flag(type='checkbox', name='attr_ship_shield_active_flag', value='1')
                        .options
                            .row
                                span(data-i18n='name:-u') NAME:
                                input(type='text', name='attr_ship_shield_name')
                            .row
                                span(data-i18n='shield-capacity-x:-u') SHIELD CAPACITY X:
                                input(type='number', style='width:100px;', name='attr_ship_shield_capacity')
                            .row
                                span(data-i18n='regen-rate-x:-u') REGEN RATE X:
                                input(type='number', style='width:100px;', name='attr_ship_shield_regen_rate_coefficient')
                        .display(style='margin-bottom: 2px;')
                            span(name='attr_ship_shield_name', style='width:120px; padding-right: 0px;')
                            span(name='attr_ship_shield_capacity', style='width:20px; padding-right: 0px;')
                            span(name='attr_ship_shield_regen_rate_coefficient', style='width:20px; padding-right: 0px;')
                span.sheet-label(style='margin-top: 0px; position: absolute; bottom: 0px;', data-i18n='armor-and-shield-u') ARMOR &amp; SHIELD
